darkCol = #005189
lightCol = #95aec0

body
  padding: 0
  margin:0
  font-family: 'Raleway', sans-serif;
  background-image:url('/img/bkd.png');
  color:darkCol
a
  color: darkCol

header a
  text-decoration:none


h1
  font-family: 'Raleway', sans-serif;

h2
  margin:2px
  font-size:20px
p
  margin-bottom:8px
  margin-top:0px

large
  font-size:33px

nav ul
  list-style-type: none;
  margin:0
  padding:0

nav ul li
  float:left
  margin-right:20px;
  background-color:rgba(255,255,255,.8)
  padding:10px
  padding-right:20px;
  padding-left:20px
  height:100%
  margin:0
  margin-right:2px

nav ul li:hover
  background-color:darkCol
  color:#fff

nav ul a
  color:lightCol
  text-decoration:none
  margin:0
  padding:0


a.linkThumb
  text-decoration:none




 #map-canvas
 	position:absolute
 	width:100%
  height:100%
  top:0
  left:0
  z-index:-1


 header
 	margin:0
 	background-color:rgba(255,255,255,.4)
 	height:40px;

footer
  background-color:rgba(255,255,255,.9)
  padding:20px;
  width:100%
  height:100px
  margin-top:30px
  text-align:center
  color:darkCol



footer ul
  list-style-type: none;

footer ul li
  float:left
  text-align:center

.mainBlock
  margin:0 auto
  width:90%
  max-width:1024px
  padding:0


.whiteTxt
  color:#ffffff




.linkThumb
  width:32%
  min-width:200px
  height:240px
  float:left
  margin-right:5px
  margin-bottom:5px
  background-color:rgba(255,255,255,.9)
  padding:2px


.linkThumb img
  width:100%

  background-color:rgba(255,255,255,.4)

.clear
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;

.mainContext
  width:55%

.widePost
  width:95%
  background-color:rgba(255,255,255,.9)
  padding:20px;
  margin-bottom:2px

.widePost .left
  float:left
  width:62%
  padding-right:10px


.widePost .right
  width:35%
  float:right


.right img
  width:100%


