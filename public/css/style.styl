darkCol = #005189
lightCol = #95aec0

body
  padding: 0
  margin:0
  font-family: 'Raleway', sans-serif;
  background-image:url('/img/bkd.png');
  color:darkCol
a
  color: lightCol

header a
  text-decoration:none


.colBox, .widePost
  -moz-border-radius: 5px;
  border-radius: 5px;

.colBox img
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;

h1, h2
  font-family: 'Raleway', sans-serif;
  color:darkCol

h2
  margin:2px
  font-size:20px
p
  margin-bottom:8px
  margin-top:0px

large
  font-size: 33px

.main-img
  background-image: url("/img/opener2.jpg")

.cont-img
  background-image: url("/img/contact_main.jpg")

.about-img
  background-image: url("/img/about_main.jpg")

.main-img, .cont-img, .about-img
  background-repeat: no-repeat
  background-attachment: fixed
  background-position: center top
  height: 300px
  position:relative
  margin-bottom:20px
  background-color:#666
  border-bottom:3px solid #fff


.links
  text-align:center

.wide-top
  background-color:#666


.main-img-txt
  padding-top:40px
  width:100%
  position:relative
  

.main-img-txt
  text-align:center

