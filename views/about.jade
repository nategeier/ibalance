extends layout

block content
  
  .about-img
    .main-img-txt
      .large-5.small-4.columns
        img(src='/img/logo_large_white.png')
      .large-7.small-8.columns
        h1(style='margin-bottom:2px;').whiteTxt About
        p.whiteTxt Located in Portland, Oregon since 2009

