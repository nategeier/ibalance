extends layout


block content
  .large-12
    .large-main.large-12.center
      .main-img
        .main-img-txt
          h1(style='margin-bottom:2px;').whiteTxt Interactive Balance
          p.whiteTxt Pretty Data is the WD-40 for your business

    - var items = [];
    - items.push({id:1, head:'E-Learning', sub:'Custom built Learning Management Systems', link:'/about', targ:'_self'})
    - items.push({id:2, head:'Design', sub:'Branding and Intuitive Design', link:'/about', targ:'_self'})
    - items.push({id:3, head:'About', sub:'Lots of proprietary stuff', link:'/about', targ:'_self'})
    - items.push({id:4, head:'Technology', sub:'What we use', link:'/technology', targ:'_self'})
    - items.push({id:5, head:'Data', sub:'Pretty pretty data', link:'/about', targ:'_self'})
    - items.push({id:6, head:'Websites', sub:'General consumer website builds', link:'http://chayolv.com', targ:'_self'})
    .row
      - each item, j in items
        .linkThumb
          .large-4.columns.no-pad.small-6
            .padding-small
              .colBox
                a(id=item.id, href= item.link, target= item.targ)
                  img(src='/img/thumb#{j +1}.jpg')
                  h2 #{item.head}